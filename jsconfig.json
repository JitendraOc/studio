{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts" // Next.js internal types
  ],
  "exclude": ["node_modules"]
}
